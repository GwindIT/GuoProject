<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_module"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input_account_login"
        android:textColor="@android:color/black"
        android:textSize="12sp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/token_login_til_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_module2">

        <EditText
            android:id="@+id/token_login_et_server"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/server"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="16sp"></EditText>


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/token_login_til_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_module2">

        <EditText
            android:id="@+id/token_login_et_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/account"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="16sp"></EditText>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/token_login_btn_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_following"
            android:gravity="center"
            android:text="@string/token_login"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
        <Button
            android:id="@+id/token_login_btn_confirm_login"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_following"
            android:gravity="center"
            android:text="@string/token_confirm_login"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>