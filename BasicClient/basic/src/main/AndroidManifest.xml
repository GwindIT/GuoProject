<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idsmanager.basicclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="com.idsmanager.REQUEST_TOKEN_PERMISSION" />
    <uses-permission android:name="com.idsmanager.RECEIVE_TOKEN_PERMISSION" />

    <uses-permission android:name="com.idsmanager.SLO_PERMISSION" />

    <application
        android:name="com.idsmanager.basicclient.application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.idsmanager.basicclient.ui.activities.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.idsmanager.basicclient.ui.activities.AccountActivity"
            android:label="@string/account_manager"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TransparentActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.idsmanager.basicclient.ui.activities.SettingActivity"
            android:label="@string/settings"
            android:launchMode="singleTask"
            android:parentActivityName="com.idsmanager.basicclient.ui.activities.MainActivity" />


        <receiver
            android:name="com.idsmanager.basicclient.receiver.TokenReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.idsmanager.rp.ACTION_TOKEN_RECEIVED" />
                <action android:name="com.idsmanager.rp.ACTION_SLO" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.idsmanager.ssosublibrary.receiver.HostTokenReceiver">
            <intent-filter>
                <action android:name="com.idsmanager.ACTION_RECEIVE_TOKEN" />
            </intent-filter>
        </receiver>


    </application>

</manifest>
